<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogoSignup"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_mobil_indo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitleSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Daftar untuk Melihat Kendaraan yang Anda inginkan"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgLogoSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- NAMA -->
        <TextView
            android:id="@+id/lblNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:text="Nama Lengkap"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvTitleSignup"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etNamaLengkap"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounded_input"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:textColorHint="#8A8A8A"
            app:layout_constraintTop_toBottomOf="@id/lblNama"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- EMAIL -->
        <TextView
            android:id="@+id/lblEmailSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="Email"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/etNamaLengkap"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etEmailSignup"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounded_input"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:textColorHint="#8A8A8A"
            app:layout_constraintTop_toBottomOf="@id/lblEmailSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PASSWORD -->
        <TextView
            android:id="@+id/lblPassSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="Kata Sandi"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/etEmailSignup"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/containerPass"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounded_input"
            app:layout_constraintTop_toBottomOf="@id/lblPassSignup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etPassSignup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="#000000"
                android:textColorHint="#8A8A8A" />

            <ImageView
                android:id="@+id/btnEyePass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_eye_off" />
        </FrameLayout>

        <!-- KONFIRMASI PASSWORD -->
        <TextView
            android:id="@+id/lblKonfPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text="Konfirmasi Kata Sandi"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/containerPass"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/containerKonfPass"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_rounded_input"
            app:layout_constraintTop_toBottomOf="@id/lblKonfPass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etKonfPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="#000000"
                android:textColorHint="#8A8A8A" />

            <ImageView
                android:id="@+id/btnEyeKonfPass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_eye_off" />
        </FrameLayout>

        <!-- BUTTON -->
        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/yellow_main"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:layout_constraintTop_toBottomOf="@id/containerKonfPass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- FOOTER -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_daftar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah memiliki Akun? "
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textColor="@color/yellow_main"
                android:textSize="18sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
