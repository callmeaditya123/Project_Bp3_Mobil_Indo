<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasang Iklan Sekarang"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggah Foto Iklan"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggah foto mobil anda yang akan di jual."
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <include layout="@layout/item_upload_box"/>
                <include layout="@layout/item_upload_box"/>
                <include layout="@layout/item_upload_box"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kondisi Mobil"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rgKondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/rbBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/selector_option_button"
                    android:text="Baru"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="25dp"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"/>

                <RadioButton
                    android:id="@+id/rbPreloved"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/selector_option_button"
                    android:text="Preloved"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="25dp"
                    android:gravity="center"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_white"
                android:hint="Rp Harga Barangmu"
                android:padding="10dp"
                android:textColorHint="#828282"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_input_white"
                android:hint="Beri tahu pembeli..."
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:gravity="top"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rgPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/rbCod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COD"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingVertical="15dp"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@android:color/white"/>

                <RadioButton
                    android:id="@+id/rbKartu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kartu Kredit / Debit"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingVertical="15dp"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:drawableTint="@android:color/white"
                    android:layout_marginTop="8dp"/>
            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDaftarkan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Daftarkan"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_button_yellow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="130dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/layout_bottom_nav_sell"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="28dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
